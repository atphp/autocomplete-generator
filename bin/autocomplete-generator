#!/usr/bin/env php
<?php

use atphp\autocomplete_generator\AutocompleteGenerator;

$files = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php'
];

foreach ($files as $file) {
    if (file_exists($file)) {
        require_once $file;
        break;
    }
}

function main()
{
    global $argv;

    foreach ($argv as $arg) {
        if (class_exists($arg)) {
            echo (new AutocompleteGenerator())->generate($arg) . "\n\n";
        }
    }
}

main();
